<Window x:Class="RandomScoreAllocatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="随机分数分配器" Height="720" Width="1080" Background="#F7F8FB" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#222831" Height="70">
            <DockPanel LastChildFill="False">
                <TextBlock Text="随机分数分配器" Foreground="White" FontSize="20" FontWeight="Bold" Margin="16,0" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,12,0">
                    <Button Content="打开说明" Background="#00ADB5" Click="BtnHelp_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Controls -->
            <Border Background="White" CornerRadius="16" Padding="16" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Excel 文件" FontWeight="Bold"/>
                        <StackPanel Orientation="Vertical">
                            <TextBox x:Name="TxtFile" Width="420" IsReadOnly="True" />
                            <Button Content="选择文件" Background="#6C5CE7" Click="BtnBrowse_Click"/>
                        </StackPanel>
                        <TextBlock Foreground="#777" FontSize="12" Text="第一行：姓名 | 学科(占比%) | 学科(占比%) ..." />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="最小单科分（避免极端）" FontWeight="Bold"/>
                        <TextBox x:Name="TxtMinEach" Width="120" Text="5"/>
                        <TextBlock Foreground="#777" FontSize="12" Text="可设为 0 允许出现 0 分"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="单科最大占比" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TxtMaxFrac" Width="120" Text="0.6"/>
                            <TextBlock VerticalAlignment="Center" Margin="6,0,0,0" Text="(0~1)"/>
                        </StackPanel>
                        <TextBlock Foreground="#777" FontSize="12" Text="例如 0.6 表示最多占总分 60%"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                        <CheckBox x:Name="ChkUseWeights" Content="使用列头占比作为权重" IsChecked="True" Margin="8"/>
                        <CheckBox x:Name="ChkFixedSeed" Content="固定种子（可复现）" IsChecked="True" Margin="8"/>
                        <Button Content="生成预览" Background="#00B894" Click="BtnPreview_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid -->
            <Border Grid.Row="1" Background="White" CornerRadius="16" Padding="12" Margin="0,12,0,0">
                <DataGrid x:Name="GridPreview" AutoGenerateColumns="True" CanUserAddRows="False" IsReadOnly="True"/>
            </Border>
        </Grid>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="导出结果到新文件" Background="#6C5CE7" Click="BtnExport_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
